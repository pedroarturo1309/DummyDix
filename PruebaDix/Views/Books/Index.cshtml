@model IEnumerable<PruebaDix.Models.title>
@{
    ViewBag.Title = "Index";
}

<h2>Listado de libros</h2>

<form action="@Url.Action("Index")" method="get"  class="navbar-form navbar-left" role="search">
    <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Buscar">
    </div>
    <button type="submit" class="btn btn-default">Buscar</button>
</form>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Título
            </th>
            <th>
                Acción
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title1</td>
                <td>
                    <button type="button" class="btn btn-primary">Ver detalle</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#myTable").DataTable();
    })
</script>
